{
  "name": "logux.io",
  "private": true,
  "scripts": {
    "securitytxt:sign": "gpg --digest-algo SHA512 --clearsign src/well-known/security.txt",
    "start": "parcel serve src/uikit.pug --open",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint && yarn build",
    "clean": "rimraf dist/ .cache",
    "build": "rimraf dist/ && NODE_ENV=production ./build",
    "nginx": "podman run --rm -p 8000:80 -e PORT=80 $(buildah bud .)",
    "nginx:shell": "podman run --rm -i $(buildah bud .) sh",
    "deploy": "gcloud builds --project logux-255417 submit"
  },
  "dependencies": {
    "make-dir": "^3.0.0",
    "parcel-bundler": "^1.12.4",
    "postcss-hexrgba": "^1.0.2",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.1.2",
    "posthtml": "^0.12.0",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0",
    "sugarss": "^2.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^32.2.0",
    "@logux/sharec-config": "^0.5.3",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^12.1.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "stylelint": "^11.1.1",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^3.1.1",
    "svgo": "^1.3.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "engines": {
    "node": "^12.0.0"
  },
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "node/no-unpublished-require": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": null,
      "block-closing-brace-newline-before": null,
      "block-opening-brace-space-before": null
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.3"
  }
}
