html
  --scroll-color: #aaa

  @mixin no-mobile
    scrollbar-color: var(--scroll-color) transparent
    scrollbar-width: thin

    @mixin dark
      --scroll-color: var(--base-border)

@mixin no-mobile
  ::-webkit-scrollbar
    width: 4px
    height: 4px
    background: transparent

  ::-webkit-scrollbar-thumb
    background: var(--scroll-color)
    -webkit-border-radius: 1ex

@media (width <= 1100px)
  body
    &.has-no-scroll
      overflow: hidden
