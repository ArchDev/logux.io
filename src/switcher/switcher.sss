.switcher_tabs
  display: flex
  margin-bottom: var(--text-margin)
  color: var(--base-title)
  border-bottom: 1px solid var(--base-border)

.switcher_tabs button
  padding: 6px 15px
  border-bottom: 3px solid transparent

  &[aria-selected]
    font-weight: bold
    border-color: var(--base-title)

    &:hover
      cursor: default
      background: transparent

  @mixin mobile
    padding: 6px 9px
