html
  --text-after: 18px
  --text-side: 30px

  @mixin mobile
    --text-after: 15px
    --text-side: 15px

.text
  box-sizing: border-box
  width: 100%
  padding: var(--text-side)

  @mixin no-mobile
    max-width: 900px
    padding-top: 39px
    padding-bottom: calc(69px - var(--text-after))
    margin: 0 auto

  @mixin mobile
    padding-bottom: calc(36px - var(--text-after))

.text_block
  margin-bottom: var(--text-after)
