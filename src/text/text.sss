html
  --text-after: 21px
  --text-side: 50px

  @media (width < 1100px)
    --text-side: 30px

  @mixin mobile
    --text-after: 15px
    --text-side: 15px

.text
  box-sizing: border-box
  width: 100%
  padding: 0 var(--text-side)

  @mixin no-mobile
    max-width: 900px
    margin: 0 auto

.text_block
  margin-bottom: var(--text-after)
